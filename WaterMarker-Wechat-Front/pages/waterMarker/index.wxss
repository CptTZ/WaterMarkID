/**index.wxss**/

.bgWord {
  position: absolute;
  left: 0;
  top: 0;
  padding: 80rpx 0 0;
  width: 100%;
  height: 300rpx;
  text-align: center;
  color: #888;
  z-index: 1;
  cursor: pointer;
}

.bgWord .icon_line {
  font-size: 56rpx;
}
.icon_line image{
  height: 117rpx;
  width: 117rpx;
}
.bgWord .text_line {
  margin-top: 20rpx;
  font-size: 28rpx;
  height: 40rpx;
}

.page__bd {
  text-align: center;
}

.page__bd .section {
  height: 100rpx;
  line-height: 100rpx;
}

.page__bd .section1 {
  border-top: 1px solid #f7f7f7;
  border-bottom: 1px solid #f7f7f7;
}

.page__bd .section .left {
  padding-left: 10rpx;
  float: left;
  width: 105rpx;
  height: 100%;
  color: #888;
  text-align: left;
  font-size: 28rpx;
}

.page__bd .section .right {
  float: right;
  width: 630rpx;
  height: 100%;
  color: #b2b2b2;
  font-size: 30rpx;
  text-align: left;
  overflow: hidden;
}

.page__bd .section .right input {
  height: 100rpx;
  line-height: 100rpx;
}

.page__bd .section .right input.active {
  color: #000;
}

.page__bd  .btn {
  width: 670rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-radius: 4px;
}

.page__bd .normal {
  margin-top: 50rpx;
}

.page__bd .primary {
  color: #fff;
  background: #108ee9;
  margin-top: 30rpx;
}

.circle {
  display: inline-block;
  margin: 20rpx 20rpx 0 0;
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  border: 1rpx solid #979797;
  background: #000;
}

.circle.active {
  margin-top: 15rpx;
  width: 68rpx;
  height: 68rpx;
}

.contact,.contact::after,.contact::before {
  background: none;
  margin: 0;
  padding: 0;
  border: none;
  vertical-align: top;
  font-size: inherit;
  color: inherit;
  line-height:inherit;
}
.weui-footer{
  margin-top: 100rpx;
}
.weui-footer__text{
  margin-top: 10rpx;
}
.page__bd .btn-share{
  margin-top: 50rpx;
  color: #108EE9;
  overflow: visible;
  background: none;
  border: 1px solid #108EE9;
}

.share-icon{
  margin: -6rpx 0 0 6rpx;
  display: inline-block;
  height: 32rpx;
  width: 32rpx;
  vertical-align: middle;
}